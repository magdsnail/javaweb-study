    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>getrc</servlet-name>
        <servlet-class>com.snail.servlet.GetServlet</servlet-class>
    </servlet>
