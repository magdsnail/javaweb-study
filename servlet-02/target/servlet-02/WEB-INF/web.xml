    </context-param>
    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>com.snail.servlet.HelloServlet</servlet-class>
<!--        <init-param>-->
<!--            <param-name></param-name>-->
<!--            <param-value></param-value>-->
<!--        </init-param>-->
